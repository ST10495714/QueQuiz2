<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colleseum"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/QuestionTextView"
        android:layout_width="380dp"
        android:layout_height="331dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Falsebutton"
        android:layout_width="137dp"
        android:layout_height="64dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif-monospace"
        android:text="False"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Truebutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/Nextbutton"
        android:layout_width="135dp"
        android:layout_height="62dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="108dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#000000"
        android:fontFamily="serif-monospace"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:barrierMargin="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Falsebutton" />

    <Button
        android:id="@+id/Truebutton"
        android:layout_width="137dp"
        android:layout_height="62dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="89dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif-monospace"
        android:text="True"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Nextbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Falsebutton"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="serif-monospace"
        android:text="Choose whether True or False"
        android:textColor="#0D0D0D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuestionTextView" />

    <TextView
        android:id="@+id/FeedbacktextView"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="43dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nextbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>